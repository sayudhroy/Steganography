<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.steganography.MainActivity">

    <TextView
            android:text="GUIDE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/textView2"
            android:layout_toStartOf="@+id/bProceed" android:layout_marginTop="38dp"
            android:id="@+id/textView10" android:textAlignment="center" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:textSize="22sp" android:textAllCaps="true"
            android:textStyle="normal|bold"/>
    <TextView
            android:layout_width="match_parent"
            android:text="Image Steganography"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif" android:textSize="24sp" android:textAlignment="center"
            android:textAllCaps="true" android:layout_below="@+id/textView3" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="match_parent"
            android:text="Sayudh Roy"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif" android:textSize="18sp" android:textAlignment="center"
            android:id="@+id/textView2" android:textAllCaps="true"
            android:layout_below="@+id/textView6" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="match_parent"
            android:text="Debayan Mitra"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif" android:textSize="18sp" android:textAlignment="center"
            android:id="@+id/textView6" android:textAllCaps="true"
            android:layout_below="@+id/textView5" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="match_parent"
            android:text="Project By"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif" android:textSize="22sp" android:textAlignment="center"
            android:id="@+id/textView4" android:textAllCaps="true"
            android:textStyle="normal|bold"
            android:layout_below="@+id/textView8" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="147dp"/>
    <TextView
            android:layout_width="match_parent"
            android:text="Chahat Gopalika"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif" android:textSize="18sp" android:textAlignment="center"
            android:id="@+id/textView5" android:textAllCaps="true"
            android:layout_marginTop="8dp" android:layout_below="@+id/textView4" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:text="Dr. Asoke Nath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/textView9" android:textAlignment="center"
            android:textSize="18sp" android:textAllCaps="true"
            android:layout_below="@+id/textView10" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:text="Proceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp" android:id="@+id/bProceed"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:onClick="onButtonClick"/>
    <TextView
            android:layout_width="match_parent"
            android:text="Android Application"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif" android:textSize="24sp" android:textAlignment="center"
            android:layout_marginTop="19dp"
            android:id="@+id/textView3" android:textAllCaps="true"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>
